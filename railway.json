{
    "services": [
      {
        "name": "backend",
        "rootDir": "server",
        "startCommand": "node index.js",
        "installCommand": "npm install"
      },
      {
        "name": "frontend",
        "rootDir": "client",
        "startCommand": "npm run preview",
        "installCommand": "npm install && npm run build",
        "envVars": {
          "VITE_API_URL": "https://your-backend-url/api"
        }
      }
    ]
  }
  